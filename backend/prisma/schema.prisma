generator client {
  provider = "prisma-client-js"
  binaryTargets = ["debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  phone          String?
  documentNumber String   @unique
  address        String
  sales          Sale[]
  createdAt      DateTime @default(now())

  @@map("personas")
}

model Sale {
  id             String      @id @default(uuid())
  person         Person      @relation(fields: [personId], references: [id])
  personId       String
  total          Decimal
  status         SaleStatus  @default(PENDING)
  deliveryMethod DeliveryMethod
  dispatchId     String?
  items          SaleItem[]
  createdAt      DateTime    @default(now())
  expiresAt      DateTime?
}

model SaleItem {
  id        String  @id @default(uuid())
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  saleId    String
  productId String
  quantity  Int
  unitPrice Decimal
}

enum SaleStatus {
  PENDING
  COMPLETED
  SHIPPED
  CANCELLED
}

enum DeliveryMethod {
  PICKUP
  DISPATCH
}
